<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="001-create-customer" author="jurispay">
        <createTable tableName="customer">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="nome_completo" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
            <column name="cpf" type="VARCHAR(14)">
                <constraints nullable="false"/>
            </column>
            
            <column name="telefone" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            
            <column name="chave_pix" type="VARCHAR(255)"/>
            
            <column name="renda_mensal" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            
            <column name="ocupacao_atual" type="VARCHAR(255)"/>
            
            <column name="redes_sociais" type="VARCHAR(500)"/>
            
            <column name="data_criacao" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            
            <column name="data_atualizacao" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Unique constraint para CPF -->
        <addUniqueConstraint
            tableName="customer"
            columnNames="cpf"
            constraintName="uk_customer_cpf"/>

        <!-- Ãndices para melhorar performance de buscas -->
        <createIndex
            tableName="customer"
            indexName="idx_customer_cpf">
            <column name="cpf"/>
        </createIndex>

        <createIndex
            tableName="customer"
            indexName="idx_customer_telefone">
            <column name="telefone"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
