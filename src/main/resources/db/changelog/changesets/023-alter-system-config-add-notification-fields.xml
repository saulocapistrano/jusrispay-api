<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="023-alter-system-config-add-notification-fields" author="jurispay">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="system_config"/>
        </preConditions>

        <addColumn tableName="system_config">
            <column name="pix_key" type="VARCHAR(255)"/>
            <column name="notification_timezone" type="VARCHAR(80)" defaultValue="America/Fortaleza">
                <constraints nullable="false"/>
            </column>
            <column name="reminder_dispatch_time" type="TIME" defaultValue="09:00:00">
                <constraints nullable="false"/>
            </column>
            <column name="collection_dispatch_time" type="TIME" defaultValue="10:00:00">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
