<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="013-create-wallet" author="jurispay">
        <createTable tableName="wallet">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="owner_type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="saldo" type="NUMERIC(19,2)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <column name="data_criacao" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="data_atualizacao" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="wallet" indexName="idx_wallet_owner">
            <column name="owner_type"/>
            <column name="owner_id"/>
        </createIndex>

        <addUniqueConstraint
            tableName="wallet"
            columnNames="owner_type,owner_id"
            constraintName="uk_wallet_owner"/>

        <insert tableName="wallet">
            <column name="owner_type" value="JURISPAY"/>
            <column name="owner_id" valueNumeric="1"/>
            <column name="saldo" valueNumeric="0"/>
        </insert>
    </changeSet>

</databaseChangeLog>
