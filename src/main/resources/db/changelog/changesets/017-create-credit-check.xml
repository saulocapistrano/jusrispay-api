<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="017-create-credit-check" author="jurispay">
        <createTable tableName="credit_check">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="loan_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="customer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="cpf" type="VARCHAR(14)">
                <constraints nullable="false"/>
            </column>

            <column name="provider_name" type="VARCHAR(60)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="decision" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="summary_json" type="TEXT"/>

            <column name="reused_from_credit_check_id" type="BIGINT"/>

            <column name="requested_by_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="trace_id" type="VARCHAR(64)"/>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="finished_at" type="TIMESTAMP"/>
        </createTable>

        <createIndex tableName="credit_check" indexName="idx_credit_check_loan_id">
            <column name="loan_id"/>
        </createIndex>

        <createIndex tableName="credit_check" indexName="idx_credit_check_customer_id">
            <column name="customer_id"/>
        </createIndex>

        <createIndex tableName="credit_check" indexName="idx_credit_check_cpf_finished_at">
            <column name="cpf"/>
            <column name="finished_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
