<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="022-create-user-profile-preferences" author="jurispay">
        <createTable tableName="user_profile_preferences">
            <column name="username" type="VARCHAR(120)">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="theme" type="VARCHAR(20)" defaultValue="system">
                <constraints nullable="false"/>
            </column>

            <column name="compact_mode" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="user_profile_preferences" indexName="idx_user_profile_preferences_theme">
            <column name="theme"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
